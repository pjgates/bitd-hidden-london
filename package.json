{
    "name": "bitd-hidden-london",
    "version": "0.3.0",
    "description": "Hidden London supplement module for Blades in the Dark in Foundry VTT",
    "type": "module",
    "scripts": {
        "convert": "tsx scripts/convert-vault.ts",
        "compile-packs": "tsx scripts/compile-packs.ts",
        "build": "vite build",
        "watch": "vite build --watch",
        "lint": "eslint src/",
        "clean": "rm -rf dist packs/hidden-london-factions packs/hidden-london-locations packs/hidden-london-reference",
        "link": "echo 'Symlink to your Foundry modules folder: ln -s $(pwd) <foundryData>/Data/modules/bitd-hidden-london'"
    },
    "devDependencies": {
        "@foundryvtt/foundryvtt-cli": "^3.0.3",
        "@typescript-eslint/eslint-plugin": "^8.54.0",
        "@typescript-eslint/parser": "^8.54.0",
        "eslint": "^9.39.2",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-boundaries": "^5.4.0",
        "gray-matter": "^4.0.3",
        "marked": "^17.0.1",
        "sass": "~1.83.0",
        "tsx": "^4.21.0",
        "typescript": "~5.7.0",
        "vite": "~6.1.0",
        "vite-plugin-static-copy": "~2.3.0"
    },
    "engines": {
        "node": ">=20"
    }
}
